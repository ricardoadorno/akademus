# Dockerfile ultra-leve para desenvolvimento em EC2 pequeno
FROM node:20.10.0-alpine

WORKDIR /app

# Install apenas curl (necessário) sem cache
RUN apk add --no-cache curl
RUN npm install -g @nestjs/cli

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies sem cache e cleanup
RUN npm ci --only=production && \
    npm cache clean --force && \
    rm -rf /tmp/* /var/cache/apk/*

# Copy source code
COPY src ./src/
COPY tsconfig*.json ./
COPY .env* ./

# Generate Prisma client sem build completo
RUN npx prisma generate

# Use node user (sem criar novo usuário)
USER node

EXPOSE 3000

# Start em modo desenvolvimento (menos recursos)
CMD ["npm", "run", "dev"]
